SNAPTASK_PRIMARY.ENV="local"

SNAPTASK_SERVER.PORT="8080"
SNAPTASK_SERVER.READ_TIMEOUT="30"
SNAPTASK_SERVER.WRITE_TIMEOUT="30"
SNAPTASK_SERVER.IDLE_TIMEOUT="60"
SNAPTASK_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

SNAPTASK_DATABASE.HOST="localhost"
SNAPTASK_DATABASE.PORT="5432"
SNAPTASK_DATABASE.USER="postgres"
SNAPTASK_DATABASE.PASSWORD=""
SNAPTASK_DATABASE.NAME="snaptask"
SNAPTASK_DATABASE.SSL_MODE="disable"
SNAPTASK_DATABASE.MAX_OPEN_CONNS="25"
SNAPTASK_DATABASE.MAX_IDLE_CONNS="25"
SNAPTASK_DATABASE.CONN_MAX_LIFETIME="300"
SNAPTASK_DATABASE.CONN_MAX_IDLE_TIME="300"

SNAPTASK_AUTH.SECRET_KEY="secret"

SNAPTASK_INTEGRATION.RESEND_API_KEY="resend_key"

SNAPTASK_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

SNAPTASK_AWS.REGION="region"
SNAPTASK_AWS.ACCESS_KEY_ID="access_key"
SNAPTASK_AWS.SECRET_ACCESS_KEY="secret_key"
SNAPTASK_AWS.UPLOAD_BUCKET="bucket_name"
SNAPTASK_AWS.ENDPOINT_URL="endpoint_url"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
SNAPTASK_OBSERVABILITY.SERVICE_NAME="snaptask"
SNAPTASK_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
SNAPTASK_OBSERVABILITY.LOGGING.LEVEL="debug"
SNAPTASK_OBSERVABILITY.LOGGING.FORMAT="console"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
SNAPTASK_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SNAPTASK_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
SNAPTASK_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
SNAPTASK_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
SNAPTASK_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
SNAPTASK_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
SNAPTASK_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
SNAPTASK_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"